      "@types/react-dom": "^19",
      "eslint": "^8",
      "eslint-config-next": "15.1.5",
      "eslint-config-prettier": "^10.0.1",
      "eslint-plugin-prettier": "^5.2.3",
      "eslint-plugin-react-refresh": "^0.4.18",
      "husky": "^9.1.7",
      "lint-staged": "^15.4.2",
      "prettier": "^3.4.2",
      "sass": "^1.83.4",
      "typescript": "^5",
      "stylelint": "^15.10.3",
      "stylelint-config-standard-scss": "^11.0.0"
   }
